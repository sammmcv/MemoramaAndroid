<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for night mode -->
    <style name="Theme.Practica4_1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/ipn_primary_dark</item>
        <item name="colorPrimaryVariant">@color/ipn_primary_light</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/ipn_secondary_dark</item>
        <item name="colorSecondaryVariant">@color/ipn_secondary_light</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    
    <!-- ESCOM theme -->
    <style name="Theme.Practica4_1.ESCOM">
        <item name="colorPrimary">@color/escom_primary_dark</item>
        <item name="colorPrimaryVariant">@color/escom_primary_light</item>
        <item name="colorSecondary">@color/escom_secondary_dark</item>
        <item name="colorSecondaryVariant">@color/escom_secondary_light</item>
    </style>
    
    <!-- Default Material theme -->
    <style name="Theme.Practica4_1.Default">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
    </style>
</resources>